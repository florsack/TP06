@{
    ViewData["Title"] = "VerCuenta";
}
<header class="main-header">
    <div class="header-left">
        <a href="@Url.Action("Index", "Home")" class="btn-primary header-btn"><img class="logo" src="/imagenes/logo.png" alt="logo"></a>
    </div>

    <div class="header-center">
        @if(@ViewBag.estaRegistrado != 0 && @ViewBag.estaRegistrado != null)
        {
            <span class="welcome-text">¡Hola, @ViewBag.Usuario.Nombre!</span>
        }
        else
        {
            <a href="@Url.Action("SignIn", "Account")" class="btn-primary header-btn">Sign in</a>
            <a href="@Url.Action("LogIn", "Account")" class="btn-primary header-btn">Log in</a>
        }
    </div>

    <div class="header-right">
        @if(@ViewBag.estaRegistrado != 0 && @ViewBag.estaRegistrado != null)
        {
            <a href="@Url.Action("VerCuenta", "Account")" ><img class="profile-pic" src="/imagenes/@ViewBag.Usuario.Foto" alt="userFoto"></a>
            <a href="@Url.Action("LogOut", "Account")" class="btn-secondary header-btn">Log Out</a>
        }
    </div>
</header>
<main>
    <section class="account-section">
        <img src="/imagenes/@ViewBag.Usuario.Foto" alt="userFoto" class="profile-pic" style="width:100px; border-radius:50%; margin:0 auto; display:block;">

        <div class="account-item">
            <span class="account-label">Usuario:</span>
            <span class="account-value">@ViewBag.Usuario.NombreUsuario</span>
        </div>

        <div class="account-item">
            <span class="account-label">Nombre:</span>
            <span class="account-value">@ViewBag.Usuario.Nombre</span>
        </div>

        <div class="account-item">
            <span class="account-label">Apellido:</span>
            <span class="account-value">@ViewBag.Usuario.Apellido</span>
        </div>

        <div class="account-item">
            <span class="account-label">Fecha de último login:</span>
            <span class="account-value">@ViewBag.Usuario.FechaUL</span>
        </div>

        <div class="account-actions">
            <a href="@Url.Action("LogOut", "Account")"><button class="btn-primary">Cerrar Sesión</button></a>
        </div>
    </section>
</main>
