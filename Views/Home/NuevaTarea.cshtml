@{
    ViewData["Title"] = "NuevaTarea";
}
<header class="main-header">
    <div class="header-left">
        <img class="logo" src="/imagenes/logo.png" alt="logo">
    </div>

    <div class="header-center">
        @if(@ViewBag.estaRegistrado != 0 && @ViewBag.estaRegistrado != null)
        {
            <span class="welcome-text">¡Hola, @ViewBag.Usuario.Nombre!</span>
        }
        else
        {
            <a href="@Url.Action("SignIn", "Account")" class="btn-primary header-btn">Sign In</a>
            <a href="@Url.Action("LogIn", "Account")" class="btn-primary header-btn">Log In</a>
        }
    </div>

    <div class="header-right">
        @if(@ViewBag.estaRegistrado != 0 && @ViewBag.estaRegistrado != null)
        {
            <img class="profile-pic" src="/imagenes/@ViewBag.Usuario.Foto" alt="userFoto">
            <a href="@Url.Action("LogOut", "Account")" class="btn-secondary header-btn">Log Out</a>
        }
    </div>
</header>
<main>

<div class="container">
    <h1>Crear nueva tarea</h1>
    <form method="post" action="@Url.Action("guardarTarea", "Home")" class="form-box">
        <label>Título:</label>
        <input type="text" name="Titulo" required>

        <label>Descripción:</label>
        <input type="text" name="Descripcion" required>

        <label>Fecha:</label>
        <input type="date" name="Fecha" required>

        <input type="submit" class="btn-primary" value="Guardar">
    </form>
</div>

</main>